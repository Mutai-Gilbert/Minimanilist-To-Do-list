{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base",  "plugin:import/typescript"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
            "ts": "never"
        }
    ]
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
    
  }